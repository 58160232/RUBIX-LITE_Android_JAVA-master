<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    tools:context="rubix.mobile.rubix_mobile.Fragment.MenuPickingFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:animateLayoutChanges="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Picking Details"
            android:textAllCaps="true"
            android:textSize="28sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_collapse"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/ic_collapse"
            android:backgroundTint="@color/place_autocomplete_prediction_secondary_text"
            android:visibility="invisible" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/grid_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="8dp"
        android:animateLayoutChanges="false">

        <TextView
            android:id="@+id/txtWo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wo No."
            android:textSize="12sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/editText_Wo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="5dp"
            android:layout_row="1"
            android:ems="10"
            android:hint="Wo No."
            android:inputType="text"
            android:paddingLeft="42dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/txtDoPick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="DO No."
            android:textSize="12sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/editText_DoNo_pick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="5dp"
            android:layout_row="3"
            android:ems="10"
            android:hint="DO No."
            android:inputType="text"
            android:paddingLeft="42dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/txtSo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:text="So No."
            android:textSize="12sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/editText_So"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="5dp"
            android:layout_row="5"
            android:ems="10"
            android:hint="So No."
            android:inputType="text"
            android:paddingLeft="42dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/txtPo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="6"
            android:text="Po No."
            android:textSize="12sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/editText_Po"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="5dp"
            android:layout_row="7"
            android:ems="10"
            android:hint="Po No."
            android:inputType="text"
            android:paddingLeft="42dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/txtInvoicePick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="8"
            android:text="Invoice"
            android:textSize="12sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/editText_Invoice_pick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="5dp"
            android:layout_row="9"
            android:ems="10"
            android:hint="Invoice"
            android:inputType="text"
            android:nextFocusDown="@+id/btn_ok_pick"
            android:paddingLeft="42dp"
            android:singleLine="true" />


        <Button
            android:id="@+id/btn_scan_wo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_column="0"
            android:layout_marginLeft="4dp"
            android:layout_row="1"
            android:background="@drawable/ic_barcode" />

        <Button
            android:id="@+id/btn_scan_do_pick"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_column="0"
            android:layout_marginLeft="4dp"
            android:layout_row="3"
            android:background="@drawable/ic_barcode" />

        <Button
            android:id="@+id/btn_scan_so"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_column="0"
            android:layout_marginLeft="4dp"
            android:layout_row="5"
            android:background="@drawable/ic_barcode" />

        <Button
            android:id="@+id/btn_scan_po"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_column="0"
            android:layout_marginLeft="4dp"
            android:layout_row="7"
            android:background="@drawable/ic_barcode" />

        <Button
            android:id="@+id/btn_scan_invoice_pick"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_column="0"
            android:layout_marginLeft="4dp"
            android:layout_row="9"
            android:background="@drawable/ic_barcode" />

    </GridLayout>

    <Button
        android:id="@+id/btn_ok_pick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="8dp"
        android:layout_row="8"
        android:backgroundTint="?attr/colorPrimary"
        android:text="OK"
        android:textAlignment="center"
        android:textColor="@android:color/background_light" />

    <LinearLayout
        android:id="@+id/linear_scanner_pick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_Scan_barcode"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_column="0"
                android:layout_marginLeft="4dp"
                android:layout_row="0"
                android:layout_weight="1"
                android:background="@drawable/ic_barcode" />

            <EditText
                android:id="@+id/editText_barcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginRight="30dp"
                android:layout_row="0"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Item Barcode"
                android:paddingLeft="42dp"
                android:singleLine="true" />

            <Button
                android:id="@+id/btn_seach_barcode"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="0"
                android:layout_weight="1"
                android:background="@drawable/ic_search_black_24dp"
                android:elevation="0dp" />

        </GridLayout>

    </LinearLayout>

    <View
        android:id="@+id/view_devide_pick"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"
        android:visibility="invisible" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_list_item_pick"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:clipToPadding="false"
        tools:listitem="@layout/recycleview_picking_item">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:text="confirm"
        android:textColor="@android:color/background_light"
        android:visibility="gone" />

</LinearLayout>
