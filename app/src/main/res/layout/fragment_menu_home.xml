<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FragmentHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context="rubix.mobile.rubix_mobile.Fragment.MenuHomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="393dp">

        <LinearLayout
            android:id="@+id/home_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="?attr/colorPrimary"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_row="0"
                android:layout_weight="1"
                android:orientation="vertical">


                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_logo" />
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Warehouse Management System"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_profile_main"
                style="@android:style/Widget.Material.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/white"
                android:drawableTop="@drawable/ic_account_circle_gray"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:text="Profile"
                android:textColor="@color/bg_gray"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_receive_main"
                style="@android:style/Widget.Material.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/white"
                android:drawableTop="@drawable/ic_receive_gray"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:text="Receiving"
                android:textColor="@color/bg_gray"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_transit_main"
                style="@android:style/Widget.Material.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/white"
                android:drawableTop="@drawable/ic_transit_gray"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:text="Transit"
                android:textColor="@color/bg_gray"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_picking_main"
                style="@android:style/Widget.Material.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/white"
                android:drawableTop="@drawable/ic_picking_gray"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:text="Picking"
                android:textColor="@color/bg_gray"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/btn_transit_main" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_count_main"
                style="@android:style/Widget.Material.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/white"
                android:drawableTop="@drawable/ic_count_gray"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:text="Counting"
                android:textColor="@color/bg_gray"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_change_main"
                style="@android:style/Widget.Material.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/white"
                android:drawableTop="@drawable/ic_change_gray"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:text="Change Location"
                android:textColor="@color/bg_gray"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
